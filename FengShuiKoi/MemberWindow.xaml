        <Button x:Name="btnKoiConsulting" Content="Koi Consulting" BorderThickness="0.5" HorizontalAlignment="Left" Height="55" Margin="316,439,0,0" VerticalAlignment="Top" Width="188" RenderTransformOrigin="0.526,1.846" Background="#FFDCCACA"/>
        <Button x:Name="btnCalculate" BorderThickness="0.5"  Content="Calculate koi and pond compatibility" HorizontalAlignment="Left" Height="55" Margin="546,439,0,0" VerticalAlignment="Top" Width="213" Background="#FFDCCACA" Click="btnCalculate_Click"/>

    </Grid>
</Window>
