<Window x:Class="FengShuiKoi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FengShuiKoi"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txbUsername" HorizontalAlignment="Left" Height="61" Margin="231,110,0,0" TextWrapping="Wrap" Text="User Name" VerticalAlignment="Top" Width="312"/>
        <TextBox x:Name="txbPassword" HorizontalAlignment="Left" Height="61" Margin="231,228,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="312"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Height="45" Margin="288,339,0,0" VerticalAlignment="Top" Width="202" Click="Button_Click"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="231,67,0,0" VerticalAlignment="Top" Width="156"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="231,191,0,0" VerticalAlignment="Top" Width="78"/>

    </Grid>
</Window>
